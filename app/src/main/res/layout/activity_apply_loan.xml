<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ApplyLoan">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        app:title="      Loan Apply "/>
    <ImageView
        android:id="@+id/loanapplyback"
        android:layout_marginTop="-50dp"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_arrow_back_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/loanid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="g"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/loanname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="j"
            android:textStyle="bold"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="23dp"
            android:text="Unit Name "
            android:textColor="@color/black"/>

        <EditText
            android:layout_marginRight="15dp"
            android:id="@+id/unitname"
            android:layout_width="200dp"
            android:layout_height="23dp"
            android:text=""
            android:textSize="15dp"
            android:background="@drawable/edittext"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="23dp"
            android:text="Unit Id"
            android:textColor="@color/black"/>
        <EditText
            android:background="@drawable/edittext"
            android:id="@+id/unitid"
            android:layout_width="200dp"
            android:layout_height="23dp"
            android:text=""
            android:textColor="@color/black"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
       <TextView
           android:layout_marginLeft="10dp"
           android:layout_width="150dp"
           android:layout_height="23dp"
           android:text="Total Amount"
           android:textColor="@color/black"/>
        <EditText
            android:background="@drawable/edittext"
            android:id="@+id/totalamount"
            android:layout_width="200dp"
            android:layout_height="23dp"
            android:text=""
            android:textColor="@color/black"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="No of members taken By the Loan"
                android:textColor="@color/black"/>
            <EditText
                android:background="@drawable/edittext"
                android:id="@+id/memno"
                android:layout_width="200dp"
                android:layout_height="23dp"
                android:text=""
                android:textColor="@color/black"/>
        </LinearLayout>
    <Button
        android:id="@+id/sendreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/submitbutton"
        android:text="send request"
        android:textStyle="normal"
        android:layout_marginTop="50dp"/>


    </LinearLayout>

